<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colordiary.ssu16.colordiary">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.colordiary.ssu16.colordiary.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WritediaryActivity"
            android:label="Write Diary"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ReaddiaryActivity"
            android:label="Read Diary"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReadOnediaryActivity"
            android:label="Diary"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".CalendarActivity"
            android:label="Calendar"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".todayfeelActivity"
            android:label="How are you today?"
            android:screenOrientation="portrait"
            />
        <activity android:name=".LockActivity"
            android:screenOrientation="portrait"
            android:label="Locked"
            />
        <activity android:name=".SetLockActivity"
            android:screenOrientation="portrait"
            android:label="Setting Lock"
            />
        <activity android:name=".OptionActivity"
            android:screenOrientation="portrait"
            android:label="Option"
            ></activity>
        <receiver android:name=".AlarmReceiver"
            ></receiver>
    </application>

</manifest>